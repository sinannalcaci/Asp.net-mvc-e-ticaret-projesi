@using Abc.MvcWebUI.Entity;
@model Product

@{
    ViewBag.Title = "Details";
}
<div class="container pb-5 mt-5">
    <div class="row">
        <div class="col-md-6">
            <img src="~/upload/@Model.Image" class="img-fluid rounded w-100">

        </div>
        <div class="col-md-6">
            <div class="row mt-1">
                <div class="col-md-12">
                    <h1>@Model.Name</h1>
                </div>
            </div>
            <div class="row mt-2">
                <div class="col-md-12">
                    @if (Model.IsApproved)
                    {
                        <span class="badge badge-primary"> Stokta </span>
                    }
                    else
                    {
                        <span class="badge badge-danger"> Stokta Yok </span>
                    }

                    <span class="product-number"> #236589545</span>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-md-12">
                    <div id="description">
                        @Model.Description

                        <div class="row">
                            <div class="col-md-4">
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star-half-alt"></i>
                                <span class="badge badge-success"> 53 </span>
                            </div>

                            <div id="write-review" class="col-md-4">
                                <a href="">
                                    Yorum Yap
                                </a>
                            </div>

                        </div>
                    </div>

                </div>
            </div>
            <div class="row mt-4">
                <div class="col-md-12">
                    <h4 id="product-price"> @Model.Price TL </h4>

                </div>
            </div>
            <div class="row mt-3">
                <div class="col-md-12">
                    <button class="btn btn-success">
                        <i class="fas fa-cart-plus"></i>
                        Sepete Ekle

                    </button>

                </div>
            </div>
        </div>
    </div>
    <div class="row mt-4">
        <div class="col-md-12">
            <div class="bd-example bd-example-tabs">
                <ul class="nav nav-tabs mb-3" id="pills-tab" role="tablist">
                    <li class="nav-item" role="presentation">
                        <a class="nav-link active" id="pills-home-tab" data-toggle="pill" href="#pills-home" role="tab" aria-controls="pills-home" aria-selected="true">Ürün Açıklaması</a>
                    </li>
                    <li class="nav-item" role="presentation">
                        <a class="nav-link" id="pills-profile-tab" data-toggle="pill" href="#pills-profile" role="tab" aria-controls="pills-profile" aria-selected="false">Ürün Resimleri</a>
                    </li>
                    <li class="nav-item" role="presentation">
                        <a class="nav-link" id="pills-contact-tab" data-toggle="pill" href="#pills-contact" role="tab" aria-controls="pills-contact" aria-selected="false">Ürün Yorumları</a>
                    </li>
                </ul>
                <div class="tab-content" id="pills-tabContent">
                    <div class="tab-pane fade active show" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">
                        @Model.Description
                    </div>
                    <div class="tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab">
                        <img src="~/upload/@Model.Image" alt="Alternate Text" /> 
                        <img src="~/upload/@Model.Image" alt="Alternate Text" />
                        <img src="~/upload/@Model.Image" alt="Alternate Text" />
                    </div>
                    <div class="tab-pane fade" id="pills-contact" role="tabpanel" aria-labelledby="pills-contact-tab">
                        <div class="row">
                            <div class="col-md-4">
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star-half-alt"></i>
                                <span class="badge badge-success"> 53 </span>
                            </div>
                        </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>

