@using Abc.MvcWebUI.Models;
@model IEnumerable<ProductModel>

<div class="row">

    @foreach (var urun in Model)
    {

        <div class="col-md-4 mb-3 mt-5">
            <div class="card">
                <img src="~/upload/@urun.Image" class="card-img-top" alt="@urun.Name">
                <div class="card-body">
                    <h5 class="card-title">
                        <a href="/Home/Details/@urun.Id">@urun.Name</a>
                    </h5>
                    <p class="card-text pt-2 descriptiontwo">@urun.Description</p>
                </div>
                <div class="card-footer">
                    <small class="text-muted product-price">
                        <i class="fas fa-lira-sign"></i>
                        @urun.Price
                    </small>
                    <a href="/Home/Details/@urun.Id" class="btn btn-primary btn-sm float-right">
                        <i class="fas fa-angle-double-right"></i>
                        Ürünü İncele
                    </a>
                </div>
            </div>

        </div>

    }
</div>